<%- include("../partials/header") %>

<h1 class="text-center">Add <%=campground.name%></h1>
<div class="row" style="width: 30%; margin: 25px auto;">
  <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]"
        placeholder="type new campgrounds" />
    </div>
    <div class="form-group">
      <input class="form-control" type="number" name="campground[price]" value="<%=campground.price%>" min="0.01"
        step="0.01" />
    </div>
    <div class="form-group">
      <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]"
        placeholder="image url" />
    </div>
    <div class="form-group">
      <input class="form-control" type="text" value="<%=campground.description%>" name="campground[description]"
        placeholder="description" />
    </div>
    <button class="btn btn-info btn-lg btn-block">Submit</button>
    <a style="margin-top: 20px;" href="/campgrounds">Back to Campgrounds</a>
  </form>
</div>

<%- include("../partials/footer") %>