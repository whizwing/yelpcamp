<%- include("../partials/header") %>

<h1 class="text-center">Add new Campgrounds</h1>
<div class="row" style="width: 30%; margin: 25px auto;">
  <form action="/campgrounds" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="name" placeholder="type new campgrounds" />
    </div>
    <div class="form-group">
      <input class="form-control" type="number" name="price" placeholder="type prices" min="0.01" step="0.01" />
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="image" placeholder="image url" />
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="description" placeholder="description" />
    </div>
    <button class="btn btn-info btn-lg btn-block">Submit</button>
    <a style="margin-top: 20px;" href="/campgrounds">Back to Campgrounds</a>
  </form>
</div>

<%- include("../partials/footer") %>